{
	"version": "2.0.0",
	"private": true,
	"name": "vue-gh-pages",
	"description": "Tutorial to publish a public repository made with Vue in GithubPages.",
	"author": "beatrizsmerino@gmail.com",
	"license": "ISC",
	"main": "index.js",
	"scripts": {
		"install:clean": "rm -rf node_modules package-lock.json",
		"dependencies:fix": "npm install --ignore-scripts && npx npm-force-resolutions",
		"preinstall": "npm run install:clean && npm run dependencies:fix",
		"postinstall": "npm run lint",
		"prepare": "husky install",
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"prettier:fix": "prettier --write \"./**/*.{vue,js,json}\"",
		"eslint:fix": "vue-cli-service lint \"**/*.{json,js,vue}\" --fix --ignore-path .eslintignore",
		"stylelint:fix": "stylelint \"**/*.{css,scss,sass,vue}\" --fix --ignore-path .stylelintignore",
		"lint": "npm run prettier:fix && npm run eslint:fix && npm run stylelint:fix",
		"deploy:v1": "chmod +x ./deploy-v1.sh && ./deploy-v1.sh",
		"deploy:v2": "node deploy-v2.mjs"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"core-js": "^3.35.0",
		"execa": "^8.0.1",
		"node-emoji": "^2.1.3",
		"svg-symbol-sprite-loader": "^5.1.0",
		"vue": "^2.7.15",
		"vue-router": "^3.6.5"
	},
	"devDependencies": {
		"@babel/core": "^7.23.7",
		"@babel/eslint-parser": "^7.23.3",
		"@commitlint/cli": "^18.5.0",
		"@commitlint/config-conventional": "^18.6.0",
		"@vue/cli-plugin-babel": "^5.0.8",
		"@vue/cli-plugin-eslint": "^5.0.8",
		"@vue/cli-plugin-router": "^5.0.8",
		"@vue/cli-service": "^5.0.8",
		"@vue/eslint-config-prettier": "^7.1.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-jsonc": "^2.12.2",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-vue": "^9.20.0",
		"eslint-webpack-plugin": "^4.0.1",
		"husky": "^8.0.3",
		"postcss": "^8.4.33",
		"postcss-html": "^1.5.0",
		"prettier": "^3.2.4",
		"sass": "^1.70.0",
		"sass-loader": "^10.5.2",
		"stylelint": "^15.11.0",
		"stylelint-config-property-sort-order-smacss": "^9.1.0",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-sass-guidelines": "^10.0.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-scss": "^5.3.2",
		"stylelint-webpack-plugin": "^4.1.1",
		"vue-template-compiler": "^2.7.16"
	},
	"resolutions": {},
	"engines": {
		"node": "20.10.0",
		"npm": "10.2.3"
	}
}
